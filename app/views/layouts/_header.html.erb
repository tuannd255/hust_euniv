<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:title), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to t(".master_courses"), master_courses_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
              id="avatar-header">
              <%= image_tag current_user.avatar.url, size: "45x45",
                class: "image-circle" %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t(".profile"), current_user %>
              </li>
              <li>
                <%= link_to t(".log_out"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t(:log_in), new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
