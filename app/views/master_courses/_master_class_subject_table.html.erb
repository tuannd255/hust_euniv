<table class="table table-striped table-bordered table-condensed table-hover fixed-table">
  <thead class="thead-inverse">
    <tr>
      <th class="col-md-2"><%= sort_link search, :code, t(".code"), {}, {remote: true} %></th>
      <th class="col-md-3"><%= sort_link search, :name, t(".name"), {}, {remote: true} %></th>
      <th class="col-md-3"><%= sort_link search, :subject, t(".subject"), {}, {remote: true} %></th>
      <th class="col-md-3"><%= sort_link search, :class, t(".class"), {}, {remote: true} %></th>
      <th class="col-md-3"><%= sort_link search, :room, t(".room"), {}, {remote: true} %></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% if master_class_subjects.present? %>
      <%= render master_class_subjects %>
    <% else %>
      <tr>
        <td><%= render "shared/nothing" %></td>
        <td></td>
        <td></td>
        <td></td>
        <td>
          <a role="button" href="#myModal" class="btn btn-primary" data-toggle="modal">
            <%= t "pick_schedule" %>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate master_class_subjects, remote: true %>
