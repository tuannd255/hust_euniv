<tr class="master-class master-class-<%= master_class.id %>"
  data-id="<%= master_class.id %>">
  <td><%= text_field_tag :code, {}, value: master_class.code,
    class: "form-control master_class.code" %></td>
  <td><%= text_field_tag :name, {}, value: master_class.name,
    class: "form-control master_class_name" %></td>
  <td><div class="update-master-class text-blue" style="cursor: pointer">
    <%= t "buttons.update" %></div></td>
  <td><%= link_to t("buttons.close"),
    edit_admin_master_class_path(master_class, close: true),
    remote: true %></td>
</tr>
