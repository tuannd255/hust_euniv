<div id="master_classes">
  <h1>Admin::MasterClass#index</h1>
  <div>
    <div class="subject-create col-md-10 col-md-offset-1">
      <%= form_for [:admin, @master_class], remote: true do |f| %>
        <%= render "shared/error_messages", object: @master_class %>
        <div class="form-group">
          <%= f.label :code, t(".code") %>
          <%= f.text_field :code, class: "form-control",
            placeholder: t(".please_input_code") %>
        </div>

        <div class="form-group">
          <%= f.label :name, t(".name") %>
          <%= f.text_field :name, class: "form-control",
            placeholder: t(".please_input_name") %>
        </div>

        <%= f.submit t("buttons.create"), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-10 col-md-offset-1">
      <div>
        <%= render "search_form", search: @search %>
      </div>
      <div id="subject-main">
        <%= render "master_classes_table", search: @search,
          master_classes: @master_classes %>
      </div>
    </div>
  </div>
</div>
