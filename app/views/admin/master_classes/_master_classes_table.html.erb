<table class="table table-striped table-bordered table-condensed table-hover">
  <thead class="thead-inverse">
    <tr>
      <td><%= sort_link search, :code, t(".code"), {}, {remote: true} %></td>
      <td><%= sort_link search, :name, t(".name"), {}, {remote: true} %></td>
      <td></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% if master_classes.present? %>
      <%= render master_classes %>
    <% else %>
      <tr>
        <td><%= render "shared/nothing" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
