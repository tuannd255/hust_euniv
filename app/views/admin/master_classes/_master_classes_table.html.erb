<table class="table table-striped table-bordered table-condensed table-hover">
  <thead class="thead-inverse">
    <tr>
      <th class="col-md-2"><%= sort_link search, :code, t(".code"), {}, {remote: true} %></th>
      <th class="col-md-6"><%= sort_link search, :name, t(".name"), {}, {remote: true} %></th>
      <th class="col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% if master_classes.present? %>
      <%= render master_classes %>
    <% else %>
      <tr>
        <td><%= render "shared/nothing" %></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate master_classes, remote: true %>
