<h3>
  <% if position.new_record? %>
    <%= t ".title_new" %>
  <% else %>
    <%= t ".title_update" %>
  <% end %>
</h3>
<%= form_for [:admin, position], remote: true do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-6">
        <%= f.label t(".name") %>
        <%= f.text_field :name, class: "form-control",
          placeholder: t(".please_input_name") %>
      </div>
      <div class="col-md-6">
        <%= f.label t(".full_name") %>
        <%= f.text_field :full_name, class: "form-control",
          placeholder: t(".please_input_full_name") %>
      </div>
    </div>
  </div>
  <% if position.new_record? %>
    <%= f.submit t("buttons.create"), class: "btn btn-success" %>
  <% else %>
    <%= f.submit t("buttons.update"), class: "btn btn-success" %>
  <% end %>
  <button class= "cancel btn btn-danger"><%= t "buttons.cancel" %></button>
<% end %>
