<tr class="master-course master-course-<%= master_course.id %>">
  <td><%= master_course.code %></td>
  <td class="truncate-col" title="<%= master_course.name %>">
    <%= link_to master_course.name, [:admin, master_course] %>
  </td>
  <td><%= l master_course.start_date, format: :default %></td>
  <td><%= l master_course.end_date, format: :default %></td>
  <td class="icon-link text-center">
    <%= link_to edit_admin_master_course_path(master_course),
      remote: true, class: "edit-master-course" do %>
      <i class="fa fa-pencil-square-o index-button" aria-hidden="true"
        title="<%=t 'buttons.edit'%>"></i>
    <% end %>
    <%= link_to admin_master_course_path(master_course),
      method: :delete, data: {confirm: t("confirm")} do %>
      <i class="fa fa-times index-button" aria-hidden="true"
        title="<%= t 'buttons.delete' %>"></i>
    <% end %>
  </td>
</tr>
