<%= form_for [:admin, master_class_subject] do |f| %>
  <table class="table table-striped table-bordered table-condensed table-hover">
    <thead class="thead-inverse">
      <tr>
        <th class="col-md-2"><%= f.label t(".code") %></th>
        <th class="col-md-3"><%= f.label t(".name") %></th>
        <th class="col-md-3"><%= f.label t(".master_subject_id") %></th>
        <th class="col-md-3"><%= f.label t(".master_class_id") %></th>
        <th class="col-md-1"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= f.text_field :code, placeholder: t(".code"),
            disabled: true, class: "form-control" %>
        </td>
        <td>
          <%= f.text_field :name, placeholder: t(".please_input_name"), class: "form-control" %>
        </td>
        <td>
          <%= f.select :master_subject_id, {}, {}, class: "form-control select-subject" %>
        </td>
        <td>
          <%= f.select :master_class_id, {}, {}, class: "form-control select-class" %>
        </td>
        <td class="text-center">
          <%= f.hidden_field :master_course_id, value: master_course.id %>
          <%= f.submit t("buttons.create"), class: "btn btn-primary" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
