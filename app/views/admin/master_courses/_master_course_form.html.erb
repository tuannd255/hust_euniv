<h3>
  <% if master_course.new_record? %>
    <%= t ".title_new" %>
  <% else %>
    <%= t ".title_update" %>
  <% end %>
</h3>
<%= form_for [:admin, master_course], remote: true do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label t(".code") %>
        <%= f.text_field :code, class: "form-control",
          placeholder: t(".please_input_code") %>
      </div>
      <div class="col-md-3">
        <%= f.label t(".name") %>
        <%= f.text_field :name, class: "form-control",
          placeholder: t(".please_input_name") %>
      </div>
      <div class="col-md-2">
        <%= f.label t(".start_date") %>
        <%= f.text_field :start_date, class: "form-control datepicker",
          placeholder: t("datepicker.time.default") %>
      </div>
      <div class="col-md-2">
        <%= f.label t(".end_date") %>
        <%= f.text_field :end_date, class: "form-control datepicker",
          placeholder: t("datepicker.time.default") %>
      </div>
        <div class="col-md-2">
      <% unless master_course.new_record? %>
          <%= f.label t(".status") %>
          <%= f.select :status, MasterCourse.statuses.collect{|k, v| [I18n.t(".#{k}"), k]},
            {}, class: "form-control" %>
      <% end %>
        </div>
    </div>
  </div>
  <% if master_course.new_record? %>
    <%= f.submit t("buttons.create"), class: "btn btn-success" %>
  <% else %>
    <%= f.submit t("buttons.update"), class: "btn btn-success" %>
  <% end %>
  <button class= "cancel btn btn-danger"><%= t "buttons.cancel" %></button>
<% end %>
