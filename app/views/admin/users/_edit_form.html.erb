<h3><%= t ".title" %></h3>

<%= form_for [:admin, user], remote: true do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-3">
        <%= f.label t(".name") %>
        <%= f.text_field :name, class: "form-control",
          placeholder: t(".please_input_name") %>
      </div>
      <div class="col-md-3">
        <%= f.label t(".email") %>
        <%= f.email_field :email, class: "form-control",
          placeholder: t(".please_input_email") %>
      </div>
      <div class="col-md-2">
        <%= f.label t(".password") %>
        <%= f.password_field :password, class: "form-control",
          placeholder: t(".please_input_password") %>
      </div>
      <div class="col-md-2">
        <%= f.label t(".status") %>
        <%= f.select :status, support.collection_user_status, {}, class: "form-control" %>
      </div>
    </div>
  </div>
  <%= f.submit t("buttons.update"), class: "btn btn-success" %>
  <button class= "cancel btn btn-danger"><%= t "buttons.cancel" %></button>
<% end %>
