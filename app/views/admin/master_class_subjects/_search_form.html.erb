<%= search_form_for search, remote: true, url: admin_master_course_path(master_course) do |f| %>
  <div class="form-group">
    <div class="row">
      <label class="col-sm-1">
        <%= t "search" %>
      </label>
      <div class="col-sm-10">
        <%= f.search_field :code_or_name_cont, placeholder: t(".code_or_name"),
          class: "form-control" %>
      </div>

      <div class="col-sm-1">
        <%= f.submit t("buttons.search"), class: "btn btn-info" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label t ".subject" %>
      </div>
      <div class="col-sm-10">
        <%= f.search_field :master_subject_code_or_master_subject_name_cont,
          placeholder: t(".code_or_name"), class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label t ".class" %>
      </div>
      <div class="col-sm-10">
        <%= f.search_field :master_class_code_or_master_class_name_cont,
          placeholder: t(".code_or_name"), class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label t ".teacher" %>
      </div>
      <div class="col-sm-10">
        <%= f.search_field :user_name_or_user_email_cont,
          placeholder: t(".code_or_name"), class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <%= f.label t ".room" %>
      </div>
      <div class="col-sm-10">
        <%= f.search_field :room_name_cont,
          placeholder: t(".name"), class: "form-control" %>
      </div>
    </div>
  </div>
<% end %>

