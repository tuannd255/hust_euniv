<table class="table table-striped table-bordered table-condensed table-hover fixed-table">
  <thead class="thead-inverse">
    <tr>
      <th class="col-md-2">
        <%= sort_link search, :code, t(".code"), {}, {remote: true} %>
      </th>
      <th class="col-md-3">
        <%= sort_link search, :name, t(".name"), {}, {remote: true} %>
      </th>
      <th class="col-md-2">
        <%= sort_link search, :master_class_name, t(".class"), {}, {remote: true} %>
      </th>
      <th class="col-md-3">
        <%= sort_link search, :user_username, t(".teacher"), {}, {remote: true} %>
      </th>
      <th class="col-md-1">
        <%= sort_link search, :room_name, t(".room"), {}, {remote: true} %>
      </th>
      <th class="col-md-1">
        <%= sort_link search, :status, t(".status"), {}, {remote: true} %>
      </th>
      <th class="col-md-1"></th>
    </tr>
  </thead>
  <tbody>
    <% if master_class_subjects.present? %>
      <%= render master_class_subjects %>
    <% else %>
      <tr>
        <td colspan="7"><%= render "shared/nothing" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate master_class_subjects, remote: true %>
